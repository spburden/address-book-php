<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Address Book</title>
    </head>
    <body>
        <div class="container">
            <h1>Address Book</h1>
            <form action="/create_contact" method="post">
                <div class="form-group">
                    <label for="newName">Name:</label>
                    <input id="newName" type="text" class="form-control" name="newName">
                </div>
                <div class="form-group">
                    <label for="newPhone">Phone Number:</label>
                    <input id="newPhone" type="number" class="form-control" name="newPhone">
                </div>
                <div class="form-group">
                    <label for="newAddress">Address:</label>
                    <input id="newAddress" type="text" class="form-control" name="newAddress">
                </div>
                <button type="submit" class="btn btn-success">Add Contact</button>
            </form>
            {% for contact in all_contacts %}
                <li> {{ contact.getName }} </li>
                <ul>
                    <li> ${{ contact.getAddress }} </li>
                    <li> Miles: {{ contact.getPhoneNumber }} </li>
                </ul>
            {% endfor %}
        </div>
    </body>
</html>
